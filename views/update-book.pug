extends layout

block content
    h2= "Edit Book Info"

    include error

    form(action="/books/" + book.id + "/edit", method="post")
        p
            label(for='title') Title
            input#title(name='title', type='text')
        p
            label(for='author') Author
            input#author(name='author', type='text')
        p
            label(for='genre') Genre
            input#genre(name='genre', type='text')
        p
            label(for='year') Year
            input#year(name='year', type='text')
        p
            input(type='submit', value='Create New Book')
        p
            input(type='submit', value='Update Book')

    form(method='post', action="/books/" + book.id + "/delete", onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href='/books') Cancel
        p
            input(type='submit', value='Delete Book')