extends layout

block content
    h2.title Edit Book Info

    include errors

    form(action="/books/" + book.id, method="post")
        p
            label(for='title') Title
            input#title(name='title', type='text', value=book.title)
        p
            label(for='author') Author
            input#author(name='author', type='text', value=book.author)
        p
            label(for='genre') Genre
            input#genre(name='genre', type='text', value=book.genre)
        p
            label(for='year') Year
            input#year(name='year', type='text', value=book.year)
        p.updateBookButtonP
            input.updateBookButton(type='submit', value='Update Book')

    form.cancelAndDeleteForm(method='post', action="/books/" + book.id + "/delete", onsubmit="return confirm('Do you really want to delete this book?');")
        div.cancelAndDeleteDiv

            p
                a.button(href='/books') Cancel
            p
                input.deleteBook(type='submit', value='Delete Book')